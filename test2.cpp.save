#include <stdio.h>
#include <stdlib.h>
#include <sys/stat.h>
#include <assert.h>

struct WorkWithText
{
    struct _stat FileInfo;

    FILE *ReadFile;
    FILE *WriteFile;
    char *buffer;
    char StringPointers[];

};

int GetInfoAboutText(WorkWithText *text, char *FileName);

int main()
{
    WorkWithText onegin = {0};

    GetInfoAboutText(&onegin, "InputOnegin.txt");

}

int GetInfoAboutText(WorkWithText *text, const char *FileName)
{
    assert(FileName != NULL);

    text.ReadFile = fopen(FileName, "r");

    if (text.ReadFile == NULL)
        perror("FILE ERROR:");

    if (_stat(FileName, &text.FileInfo) != NULL)
        perror("FILE INFO ERROR: ");

    int TextSize = text.FileInfo.st_size;
    text.buffer = (char *) calloc(sizeof(char), TextSize);
    
    if (text.buffer == NULL)
        perror("ALLOCATION ERROR: ");

/*    if (fread(text.buffer, sizeof(char), TextSize, text.ReadFile)     text mode hard check   */
        
}
